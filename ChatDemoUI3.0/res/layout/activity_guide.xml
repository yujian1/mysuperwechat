<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/select_login_register"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/black_deep">

    <ImageView
        android:id="@+id/iv_guide_logo"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_logo" />

    <Button
        android:id="@+id/btn_guide_login"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_guide_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_bg_green"
        android:text="@string/login"
        android:textColor="@color/black3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_guide_register"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_guide_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_bg_gray"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>

